<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Directory Change Detector</title>
	<style>
		body {
			margin: 0;
			font-family: Arial, sans-serif;
			background-color: #2A3D45;
			color: #DDC9B4;
			display: flex;
			flex-direction: column;
			align-items: center;
			height: 100vh;
		}

		form {
			display: flex;
			flex-direction: row;
			align-items: center;
			gap: 1rem;
		}

		.container {
			text-align: center;
			background: #2e2e2e;
			padding: 2rem;
			border-radius: 12px;
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
			max-width: 400px;
			width: 100%;
		}

		h1 {
			font-size: 3rem;
			margin-bottom: 1.5rem;
			color: #BCAC9B;
		}

		label {
			display: block;
			margin-bottom: 0.5rem;
			font-size: 1rem;
			color: #DDC9B4;
		}

		input[type="file"] {
			padding: 0.5rem;
			font-size: 1rem;
			color: #DDC9B4;
			background: #444;
			border: 1px solid #666;
			border-radius: 8px;
			cursor: pointer;
			outline: none;
		}

		button {
			padding: 0.7rem 1.5rem;
			font-size: 1.2rem;
			font-weight: bold;
			background-color: #7A6C5D;
			color: #DDC9B4;
			border: none;
			border-radius: 8px;
			cursor: pointer;
			transition: background-color 0.3s;
		}

			button:hover {
				background-color: #DDC9B4;
				color: #7A6C5D;
			}

		.answers {
			display: flex;
			flex-direction: row;
			column-gap: 2rem;
		}

		.noChange {
			font-size: 2rem;
		}

		.answerList {
			display: flex;
			flex-direction: column;
		}

		.list {
			flex: 1;
			max-height: 300px;
			overflow-y: auto;
			padding: 10px;
			border: 0.5px solid #DDC9B4;
			border-radius: 5px;
		}


			.list::-webkit-scrollbar {
				width: 8px;
			}

			.list::-webkit-scrollbar-track {
				background: #2A3D45;
				border-radius: 5px;
			}

			.list::-webkit-scrollbar-thumb {
				background: #7A6C5D;
				border-radius: 10px;
			}
	</style>
</head>
<body>
	@RenderBody()
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
